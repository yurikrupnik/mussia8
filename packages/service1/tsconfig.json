{
    "compilerOptions": {
        "noEmit": true,
        "resolveJsonModule": true,
        "declaration": false,
        "module": "ESNext",
        "target": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "composite": false,
        "allowSyntheticDefaultImports": true,
        "lib": ["es6"],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "moduleResolution": "Node"
    },
    "exclude": ["node_modules"],
//    "include": ["src"]
}
